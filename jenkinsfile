pipeline {
    agent { label 'MAVEN_JDK8' }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/jenkinsaugest/game-of-life.git',
                    branch: 'declarative'
            }
        }
        stage('package') {
            tools { 
                jdk 'JDK_8_UBUNTU'
                sh 'mvn package'
            }
        }
        stage('post build') {
            steps {
                archiveArtifacts artifacts:'**/target/gameoflife.war',
                                 onlyIfSuccessful: true
                junit testResults:'**/surefire-reports/TEST-*.xml'
            }
        }
    }
}



    

